<!DOCTYPE html>
<html>
<head>
  <title>Travel News</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="container-fluid">
    <div class="navbar-header">
      <% if current_user %>
        Logged in as <%= current_user.email %>.
        <%= link_to "Log Out", logout_path, :class => "btn btn-default" %>
      <% else %>
        <%= link_to "Sign Up", signup_path, :class => "btn btn-default" %>
        <%= link_to "Log In", login_path, :class => "btn btn-default" %>
      <% end %>
    </div>

  <%= image_tag("TravelNews.jpg", :alt => "image of Travel News header", :class => "header") %>
  <div class="under-header">

  <%= flash[:notice] %>
  <%= flash[:alert] %>

<%= yield %>
  <div></div>
</body>
</html>
